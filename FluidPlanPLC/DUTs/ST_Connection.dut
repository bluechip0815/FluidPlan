(*====================================================================
    STRUCT: Connection Definition
    Description: Defines a physical connection between two elements
                 by referencing their index in the element array.
====================================================================*)
TYPE ST_Connection :
STRUCT
    iElementA           : UINT;
    iElementB           : UINT;
    bIsDirectional      : BOOL; // TRUE if flow is restricted from A to B
END_STRUCT
END_TYPE
